@page
@model MoviesWebApp.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center font1">Add New Movie Category</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/images/category.png" class="img-fluid" />
    </div>
    <div class="col-md-8">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.Id" />
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Category Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
