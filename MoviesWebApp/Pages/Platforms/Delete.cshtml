@page
@model MoviesWebApp.Pages.Platforms.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center font1">Delete Platform Details</h1>

<div>
    <h4>Are you sure you want to delete this Platform?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Platform.PlatformName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Platform.PlatformName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Platform.Id" />
        <input type="submit" value="Delete Platform Details" class="btn btn-danger" /> 
    </form>
</div>
