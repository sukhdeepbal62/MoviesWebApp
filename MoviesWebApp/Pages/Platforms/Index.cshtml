@page
@model MoviesWebApp.Pages.Platforms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center font1">All Platforms</h1>

<p>
    <a asp-page="Create" class="btn btn-dark">Add New Platform</a>
</p>
<div class="row">
    @foreach (var item in Model.Platform)
    {
        <div class="col-3">
            <div class="card mb-2">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.PlatformName)</h4>
                </div>
                <div class="card-footer">
                    <a asp-page="./Edit" class="btn btn-secondary mr-2" asp-route-id="@item.Id">Edit</a>
                    <a asp-page="./Delete" class="btn btn-warning" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>