@page
@model MoviesWebApp.Pages.Platforms.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center font1">Add New Platform</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/images/platform.png" class="img-fluid" />
    </div>
    <div class="col-md-8">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Platform.PlatformName" class="control-label"></label>
                <input asp-for="Platform.PlatformName" class="form-control" />
                <span asp-validation-for="Platform.PlatformName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Platform Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
